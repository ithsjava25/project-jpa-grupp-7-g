<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.SpinnerValueFactory?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.BookingController"
            prefWidth="900" prefHeight="650">

    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <content>
            <VBox spacing="25" style="-fx-padding: 20;">
                <Label text="Boka bil" styleClass="header-label"/>

                <HBox spacing="25">
                    <VBox spacing="18" styleClass="card" prefWidth="450">
                        <Label text="1. Kunduppgifter" styleClass="section-title"/>
                        <TextField fx:id="firstNameField" promptText="Förnamn"/>
                        <TextField fx:id="lastNameField" promptText="Efternamn"/>
                        <TextField fx:id="emailField" promptText="E-postadress"/>
                        <TextField fx:id="personalNumberField" promptText="Personnummer"/>
                        <Separator/>
                        <Label text="2. Välj bil" styleClass="section-title"/>
                        <ComboBox fx:id="carComboBox" prefWidth="300"/>
                        <Separator/>
                        <Label text="3. Bokningstyp" styleClass="section-title"/>
                        <HBox spacing="10">
                            <RadioButton fx:id="hourlyRadio" text="Per timme" style="-fx-text-fill: #333;"/>
                            <RadioButton fx:id="dailyRadio" text="Per dag" style="-fx-text-fill: #333;"/>
                        </HBox>
                        <VBox fx:id="hourlyOptions" spacing="10" visible="false" managed="false">
                            <Label text="Välj tider (Start &amp; Slut timme):" style="-fx-text-fill: #333;"/>
                            <HBox spacing="10">
                                <Spinner fx:id="startHourSpinner" prefWidth="80"/>
                                <Spinner fx:id="endHourSpinner" prefWidth="80"/>
                            </HBox>
                        </VBox>
                        <VBox fx:id="dailyOptions" spacing="10">
                            <Label text="Bokning sker från 08:00 startdatum till 08:00 slutdatum." style="-fx-font-style: italic; -fx-text-fill: #666;"/>
                        </VBox>
                        <Separator/>
                        <Label text="4. Datum" styleClass="section-title"/>
                        <VBox spacing="10">
                            <Label text="Startdatum:" style="-fx-text-fill: #333;"/>
                            <DatePicker fx:id="startDatePicker"/>
                            <VBox fx:id="endDateBox">
                                <Label text="Slutdatum:" style="-fx-text-fill: #333;"/>
                                <DatePicker fx:id="endDatePicker"/>
                            </VBox>
                        </VBox>
                    </VBox>

                    <VBox spacing="18" styleClass="card" prefWidth="350">
                        <Label text="5. Extra tillval" styleClass="section-title"/>
                        <ScrollPane fitToWidth="true" prefHeight="200">
                            <content>
                                <VBox fx:id="addonsVBox" spacing="8">
                                    <padding>
                                        <Insets top="5" right="5" bottom="5" left="5"/>
                                    </padding>
                                </VBox>
                            </content>
                        </ScrollPane>
                        <Separator/>
                        <Label text="Pris" styleClass="section-title"/>
                        <Label fx:id="priceLabel" text="Välj bil och datum" styleClass="price-label" wrapText="true"/>
                        <Button text="Bekräfta bokning" onAction="#handleBooking" styleClass="button" maxWidth="Infinity"/>
                        <Label fx:id="statusLabel" text="" styleClass="status-label"/>
                    </VBox>
                </HBox>
            </VBox>
        </content>
    </ScrollPane>

</AnchorPane>
