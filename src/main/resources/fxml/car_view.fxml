<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" styleClass="content-view" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.CarController">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox>
            <Label text="Vagnpark" styleClass="view-header"/>
            <Label text="Hitta den perfekta bilen för din resa" styleClass="view-subheader"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" promptText="Sök bil (märke, modell...)" styleClass="search-field" prefWidth="250"/>
    </HBox>

    <TableView fx:id="carTable" VBox.vgrow="ALWAYS" styleClass="modern-table">
        <columns>
            <TableColumn fx:id="brandColumn" text="Märke" prefWidth="150" />
            <TableColumn fx:id="modelColumn" text="Modell" prefWidth="150" />
            <TableColumn fx:id="typeColumn" text="Kategori" prefWidth="120" />
            <TableColumn fx:id="priceColumn" text="Pris / Dag" prefWidth="120" />
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="120" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Visa Detaljer" styleClass="secondary-button" />
        <Button text="Boka Vald Bil" styleClass="primary-button" onAction="#handleBookingAction"/>
    </HBox>
</VBox>
